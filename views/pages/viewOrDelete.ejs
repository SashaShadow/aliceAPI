<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ver/Borrar fotos</title>
    <%- include("../partials/head.ejs"); %>
</head>
<body>

    <% if (user) { %>
        <div class="Welcome">
            <div class="WText">Bienvenida <%= user.username %>
            </div>
            
            <a href="/api/logout"  class="logout"><button class="logoutButton">Cerrar sesi√≥n</button></a>
        </div>
    <% } %>
    <div class="photoContainer">
        <h2>Fotos ingresadas</h2>
        <table class="table table-dark">
            <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Imagen</th>
                <th scope="col">Categoria</th>
                <th scope="col">ID</th>
            </tr>
            </thead>
            <tbody id="element"></tbody>
        </table>

        <h3>Ingresar ID de foto a borrar</h3>
        <form class="deleteForm">
            <input type="text" id="phid"/>
            <input type="submit" value="Eliminar"/>
        </form>

        <a href="/api/">Ingresar fotos</a>
    </div>
    <script src="./ejs.js"></script>
    <script src="./main.js"></script>
</body>
</html>