<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página para ingresar fotos al portfolio</title>
    <%- include("../partials/head.ejs"); %>
</head>
<body>

    <% if (user) { %>
        <div class="Welcome">
            <div class="WText">Bienvenida <%= user.username %>
            </div>
            
            <a href="/api/logout"  class="logout"><button class="logoutButton">Cerrar sesión</button></a>
        </div>
    <% } %>
        
        <div class="Subcontainer">
            <h2>Ingrese una foto</h2>
            <form action="/api/photos" method="post" enctype="application/json" class="myForm">
                <div class="form-group">
                    <label for="name">Nombre de la foto</label>
                    <input type="text" name="name" id="name" class="form-control" required/>
                </div>
                <div class="form-group">
                    <label for="url">URL a la imagen</label>
                    <input type="text" name="url" id="url" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="desc">Ingrese descripción de la foto</label>
                    <input type="text" name="desc" id="desc" class="form-control" required/>
                </div>
                <div class="form-group">
                    <label for="category">Categoria de la foto</label>
                    <select class="form-control" id="category" name="category" required>
                      <option>packaging</option>
                      <option>retoque digital</option>
                      <option>logos</option>
                      <option>merchandising</option>
                    </select>
                  </div>
                <button type="submit" id="myButton" class="btn btn-primary">Enviar</button>
            </form>
        </div>

    <script src="./ejs.js"></script>
</body>
</html>